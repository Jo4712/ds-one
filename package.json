{
  "name": "ds-one",
  "version": "0.1.0-beta",
  "description": "A modern, component-based design system built with TypeScript and LitElement",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "DS/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./DS/1 Root/screen.css",
    "./components/*": "./DS/2 Core/*.js",
    "./units/*": "./DS/3 Unit/*.js",
    "./pages/*": "./DS/4 Page/*.js",
    "./icons/*": "./DS/x Icon/*.svg"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "bun run --bun serve",
    "build": "bun run build:types && bun run build:components",
    "build:types": "tsc --noEmit",
    "build:components": "bun run build:core && bun run build:units && bun run build:pages",
    "build:core": "bun run build:component -- 2 Core",
    "build:units": "bun run build:component -- 3 Unit", 
    "build:pages": "bun run build:component -- 4 Page",
    "build:component": "bun run scripts/build-component.ts",
    "prepublishOnly": "bun run build",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "test": "bun test",
    "serve": "bun run --bun serve -p 3000",
    "release:patch": "bun run scripts/release.js patch",
    "release:minor": "bun run scripts/release.js minor",
    "release:major": "bun run scripts/release.js major",
    "release:beta": "bun run scripts/release.js beta"
  },
  "keywords": [
    "design-system",
    "web-components",
    "lit-element",
    "typescript",
    "ui-kit",
    "components",
    "theming",
    "i18n"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jo4712/ds-one.git"
  },
  "bugs": {
    "url": "https://github.com/jo4712/ds-one/issues"
  },
  "homepage": "https://dsone.dev",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}