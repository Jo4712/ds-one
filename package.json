{
  "name": "ds-one",
  "version": "0.1.11-alpha.0",
  "description": "a plug and play design system built with TypeScript and Lit",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "DS1/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./DS1/*": "./DS1/*",
    "./styles": "./DS1/1-root/one.css",
    "./dist/*": "./dist/*"
  },
  "sideEffects": [
    "DS1/**/*.ts",
    "dist/**/*.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "bun run build:bundle",
    "build:bundle": "bunx tsc && bunx esbuild dist/index.js --bundle --format=esm --outfile=dist/ds-one.bundle.js --sourcemap --platform=browser --target=es2020 && bunx esbuild dist/index.js --bundle --format=esm --outfile=dist/ds-one.bundle.min.js --minify --sourcemap --platform=browser --target=es2020",
    "build:types": "tsc --noEmit",
    "build:components": "bun run build:core && bun run build:units",
    "build:core": "bun run build:component -- DS1/2-core",
    "build:units": "bun run build:component -- DS1/3-unit",
    "build:component": "bun run scripts/build-component.ts",
    "prepublishOnly": "bun run build:bundle",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "test": "bun test",
    "clean": "rm -rf node_modules web/node_modules",
    "release:patch": "bun run scripts/release.ts patch",
    "release:minor": "bun run scripts/release.ts minor",
    "release:major": "bun run scripts/release.ts major",
    "release:pre:alpha": "bun run scripts/release.ts prerelease --preid=alpha",
    "release:pre:beta": "bun run scripts/release.ts prerelease --preid=beta",
    "release:pre:rc": "bun run scripts/release.ts prerelease --preid=rc",
    "docs:dev": "cd web && bun run dev",
    "docs:build": "cd web && bun run build",
    "docs:preview": "cd web && bun run preview",
    "docs:deploy": "cd web && bun run deploy"
  },
  "keywords": [
    "design-system",
    "web-components",
    "lit-element",
    "typescript",
    "ui-kit",
    "components",
    "theming",
    "i18n"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.0.0",
    "playwright": "^1.56.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@lit-labs/signals": "^0.1.3",
    "lit": "^3.0.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jo4712/ds-one.git"
  },
  "bugs": {
    "url": "https://github.com/jo4712/ds-one/issues"
  },
  "homepage": "https://dsone.dev",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
