---
// MyHeader component - custom header for docs
import Search from '@astrojs/starlight/components/Search.astro';
---

<header style="
  background: var(--ds1-docs-header-bg);
  border-bottom: 1px solid var(--ds1-docs-header-border);
  display: flex;
  align-items: center;
  height: 80.5px;
  
">
  <!-- Left: Logo -->
  <div style="
    display: flex;
    align-items: center;
    height: 81px;
    width: 280.5px;
    padding: 40px;
    border-right: 1px var(--ds1-docs-header-border) solid;
  ">
    <div style="
      height: 40px;
      display: flex;
      font-family: 'GT-America-Standard-Regular', sans-serif;
      font-size: 32px;
      color: var(--ds1-docs-header-text);
      gap: 11px;
      flex-direction: row;
      align-items: baseline;
      letter-spacing: -4%;
      margin-bottom: 14px;

    ">
      DS one
      <div style="
      display: flex;
      width: 16px;
      height: 16px;
      background: var(--ds1-docs-accent-green);
      
    "></div>
    </div>
    
  </div>

  <div style="
    width: 20px;
    height: 80.5px;
    border-right: 1px var(--ds1-docs-header-border) solid;
  ">
  </div>

  <!-- Center: Search -->
  <div style="
    flex: 1;
    display: flex;
    align-items: center;
    margin-top: 0.5px
    padding: 20px;
    padding-left: 39.5px;
  ">
    <Search class="custom-search" />
  </div>

  <!-- Right: Actions -->
  <div style="
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-right: 40px;
    min-width: fit-content;
  ">
    <!-- Language Toggle using DS one cycle component -->
    <div style="display: flex; align-items: center; pointer-events: all;">
      <cycle-v1 type="language" variant="secondary"></cycle-v1>
    </div>

    <!-- Theme Toggle using DS one cycle component -->
    <cycle-v1 type="theme" variant="secondary"></cycle-v1>
  </div>
</header>

<style>
  /* Style the search component to match the design */
  :global(.custom-search) {
    width: 300px;
    max-width: 300px;
  }

  :global(.custom-search button[data-open-modal]) {
    width: 300px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--ds1-docs-search-bg);
    border: none;
    border-radius: 4px;
    color: var(--ds1-docs-header-text-secondary);
    cursor: pointer;
    font-size: 0.875rem;
    font-family: 'GT-America-Standard-Regular', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    transition: color 0.2s ease;
  }

  :global(.custom-search button[data-open-modal]:hover) {
    color: var(--ds1-docs-header-text);
  }

  :global(.custom-search button[data-open-modal]:focus) {
    outline: none;
  }

  :global(.custom-search button[data-open-modal] kbd) {
    display: none;
  }

  :global(.custom-search button[data-open-modal] svg) {
    width: 16px;
    height: 16px;
  }
</style>